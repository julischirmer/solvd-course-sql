<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.IDAO">
    <resultMap id="CountryMap" type="Country">
        <id property="id" column="id"/>
        <result property="description" column="country_name"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="CountryMap">
        SELECT *
        FROM country
        WHERE id =#{id}
    </select>

    <select id="getAll" resultMap="CountryMap">
        SELECT *
        FROM country;
    </select>

    <insert id="insert" parameterType="Country">
        INSERT INTO country
        (country_name)
        VALUES (#{description});
    </insert>

    <update id="updateRow" parameterType="map">
        UPDATE planes SET
        year = #{object.year},
        modelId = #{object.modelId}
        WHERE plane_id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM planes
        WHERE plane_id = #{id}
    </delete>

</mapper>
